[Unit]
Description=KF2 Server
After=syslog.target network.target

[Service]
Type=simple
User=steam
Group=steam
ExecStartPre=/bin/dos2unix /home/steam/Steam/KF2Server/KFGame/Web/ServerAdmin/current_change.html
ExecStartPre=/bin/patch --forward -r /tmp/kf2-changegame.rej -i /etc/systemd/system/kf2.service.d/current_change.html.patch /home/steam/Steam/KF2Server/KFGame/Web/ServerAdmin/current_change.html
ExecStart=/home/steam/Steam/KF2Server/Binaries/Win64/KFGameSteamServer.bin.x86_64 ${KF2_PARAMS}
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
